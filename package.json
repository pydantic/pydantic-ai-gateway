{
  "name": "pydantic-gateway-root",
  "version": "0.0.0",
  "private": true,
  "license": "AGPL-3.0",
  "workspaces": [
    "gateway",
    "deploy"
  ],
  "scripts": {
    "format": "prettier --write -- .",
    "lint": "eslint gateway deploy",
    "typecheck": "npm run typecheck --workspaces",
    "test-deploy": "npm run test --workspace=deploy --silent",
    "test-gateway": "npm run test --workspace=gateway --silent",
    "test": "CI=1 npm run test --workspaces",
    "deploy": "npm run deploy --workspace=deploy --silent",
    "dev": "npm run dev --workspace=deploy --silent",
    "limits-local-db": "npm run limits-local-db --workspace=deploy",
    "limits-remote-db": "npm run limits-remote-db --workspace=deploy",
    "wrangler-secret-put": "npm run wrangler-secret-put --workspace=deploy",
    "generate-api-key": "npm run generate-api-key --workspace=deploy --silent",
    "generate-genai-types": "npm run generate-genai-types --workspace=gateway",
    "typegen": "npm run typegen --workspace=deploy --silent"
  },
  "prettier": {
    "singleQuote": true,
    "semi": false,
    "trailingComma": "all",
    "tabWidth": 2,
    "printWidth": 119,
    "objectWrap": "collapse",
    "bracketSpacing": true
  },
  "_": "@cloudflare/vitest-pool-workers is pinned because of https://github.com/cloudflare/workers-sdk/issues/10506",
  "devDependencies": {
    "@cloudflare/vitest-pool-workers": "0.8.44",
    "@cloudflare/workers-types": "^4.20250712.0",
    "@eslint/js": "^9.34.0",
    "@typescript-eslint/utils": "^8.41.0",
    "eslint": "^9.34.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^16.3.0",
    "neostandard": "^0.12.2",
    "prettier": "^3.6.2",
    "typescript": "^5.5.2",
    "typescript-eslint": "^8.41.0",
    "vitest": "~3.2.0"
  },
  "engines": {
    "node": ">= 20.19.0"
  }
}
